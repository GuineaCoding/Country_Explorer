

{{> menu}}

<div class="box transparent-box">
  <form action="/landmarkCategory/{{landmarkCategory._id}}/landmark/{{landmark._id}}/file" enctype="multipart/form-data" method="POST">
    <div class="field">
      <h1 class="title">Add Photo for the Landmark</h1>
      <div class="control">
        <input type="file" name="file">
      </div>
    </div>
    <div class="control">
      <input type="submit" class="button is-primary" value="Upload Photo">
    </div>
  </form>
</div>

<form class="box transparent-box" action="/landmarkCategory/{{landmarkCategory._id}}/updateLandmark/{{landmark._id}}" method="POST">
  <h1 class="title">Edit Landmark</h1>
  
  <p>Landmark Category ID: {{landmarkCategory._id}}</p>
  <p>Landmark ID: {{landmark._id}}</p>

  <div class="field">
    <label class="label">Landmark Title</label>
    <div class="control">
      <input class="input" type="text" placeholder="Enter Landmark Title" name="landmarkTitle" value="{{landmark.landmarkTitle}}">
    </div>
  </div>

  <div class="field">
    <label class="label">Description</label>
    <div class="control">
      <input class="input" type="text" placeholder="Enter Description" name="description" value="{{landmark.description}}">
    </div>
  </div>

  <div class="field">
    <label class="label">Latitude</label>
    <div class="control">
      <input class="input" type="text" placeholder="Enter Latitude" name="latitude" value="{{landmark.latitude}}">
    </div>
  </div>

  <div class="field">
    <label class="label">Longitude</label>
    <div class="control">
      <input class="input" type="text" placeholder="Enter Longitude" name="longitude" value="{{landmark.longitude}}">
    </div>
  </div>

  <div class="control">
    <button class="button is-primary" type="submit">Update Landmark</button>
  </div>
</form>

{{> footer}}
